@model IEnumerable<E_commerce.Models.AllProduct.Products>

@{
    ViewData["Title"] = "Home Page";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="container product-grid">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <h5 class="product-title">@product.Name</h5>
                @if (product.Image != null && product.Image.Length > 0)
                {
                    <img src="data:image/png;base64,@Convert.ToBase64String(product.Image)" alt="@product.Name" />
                }
                else
                {
                    <span>Nessuna immagine</span>
                }
                <p class="product-description">@product.Description</p>
                <p class="product-price">@product.Price.ToString("C")</p>
                <form asp-action="AddToCart" asp-controller="Cart" method="post">
                    <input type="hidden" name="productId" value="@product.ProductId" />

                    <label for="quantity">Quantità:</label>
                    <input type="number" name="quantity" min="1" value="1" class="form-control mb-2" style="width: 80px;" />

                    <button type="submit" class="btn btn-primary">Acquista Ora</button>
                </form>

                @if (User.IsInRole("admin"))
                {
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-primary">Modifica</a>
                }
            </div>
        }
    </div>
</div>
