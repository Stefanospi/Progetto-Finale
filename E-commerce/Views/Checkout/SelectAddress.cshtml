@model IEnumerable<E_commerce.Models.Auth.Addresses>

@{
    ViewData["Title"] = "Seleziona un indirizzo di spedizione";
}

<div class="container-fluid vh-100">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient bg-black">
                    <h3 class="card-title text-center personal-title text-light">Seleziona un Indirizzo di Spedizione</h3>
                </div>
                <div class="card-body mt-4">
                    <form asp-action="CreateOrder" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label for="address" class="control-label playpen-sans">Indirizzo di spedizione:</label>
                            <select id="address" name="addressId" class="form-control input-personal playpen-sans" required>
                                @foreach (var address in Model)
                                {
                                    <option value="@address.IdAddress">
                                        @address.AddressLine1, @address.City, @address.State, @address.PostalCode, @address.Country
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="button-56 playpen-sans">Procedi con l'ordine</button>
                        </div>
                    </form>

                    <!-- Pulsante per aggiungere un nuovo indirizzo -->
                    <div class="text-center mt-3">
                        <a href="@Url.Action("AddAddress", "Checkout", new { forceAdd = true })" class="button-56 playpen-sans">Aggiungi nuovo indirizzo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
