@model E_commerce.Models.Auth.Addresses

@{
    ViewData["Title"] = "Aggiungi un nuovo indirizzo";
}
<style>
    body {
        height: auto;
        background-color: #F4F4F4;
    }
</style>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient bg-black">
                    <h3 class="card-title text-center personal-title text-light">Aggiungi un Nuovo Indirizzo</h3>
                </div>
                <div class="card-body mt-4">
                    <form asp-action="AddAddress" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label for="AddressLine1" class="control-label playpen-sans">Indirizzo 1</label>
                            <input type="text" class="form-control input-personal playpen-sans" name="AddressLine1" required>
                            <span asp-validation-for="AddressLine1" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="AddressLine2" class="control-label playpen-sans">Indirizzo 2 (opzionale)</label>
                            <input type="text" class="form-control input-personal playpen-sans" name="AddressLine2">
                            <span asp-validation-for="AddressLine2" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="City" class="control-label playpen-sans">Città</label>
                            <input type="text" class="form-control input-personal playpen-sans" name="City" required>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="State" class="control-label playpen-sans">Stato</label>
                            <input type="text" class="form-control input-personal playpen-sans" name="State" required>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="PostalCode" class="control-label playpen-sans">Codice Postale</label>
                            <input type="text" class="form-control input-personal playpen-sans" name="PostalCode" required>
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Country" class="control-label playpen-sans">Paese</label>
                            <input type="text" class="form-control input-personal playpen-sans" name="Country" required>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="button-56 playpen-sans">Salva Indirizzo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
