@model E_commerce.Models.Auth.Addresses

<h2>Aggiungi un nuovo indirizzo</h2>

<form asp-action="AddAddress" method="post">
    <div class="form-group">
        <label for="AddressLine1">Indirizzo 1</label>
        <input type="text" class="form-control" name="AddressLine1" required>
    </div>
    <div class="form-group">
        <label for="AddressLine2">Indirizzo 2 (opzionale)</label>
        <input type="text" class="form-control" name="AddressLine2">
    </div>
    <div class="form-group">
        <label for="City">Città</label>
        <input type="text" class="form-control" name="City" required>
    </div>
    <div class="form-group">
        <label for="State">Stato</label>
        <input type="text" class="form-control" name="State" required>
    </div>
    <div class="form-group">
        <label for="PostalCode">Codice Postale</label>
        <input type="text" class="form-control" name="PostalCode" required>
    </div>
    <div class="form-group">
        <label for="Country">Paese</label>
        <input type="text" class="form-control" name="Country" required>
    </div>

    <button type="submit" class="btn btn-primary">Salva Indirizzo</button>
</form>
