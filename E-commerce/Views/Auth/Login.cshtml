@model E_commerce.Models.Auth.Users

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid video-bg">
    @Html.AntiForgeryToken()

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient bg-black">
                    <h3 class="card-title text-center personal-title text-light">Accedi al tuo account</h3>
                </div>
                <div class="card-body mt-4">
                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label asp-for="Username" class="control-label playpen-sans"></label>
                            <input asp-for="Username" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PasswordHash" class="control-label playpen-sans">Password</label>
                            <input asp-for="PasswordHash" type="password" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="button-56 playpen-sans">Accedi</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-controller="Auth" asp-action="Register" class="playpen-sans">Non hai un account? Registrati qui</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Video di sfondo -->
<video autoplay muted loop id="backgroundVideo">
    <source src="~/videos/STREETWEAR AD (720p, h264, youtube).mp4" type="video/mp4">
    Il tuo browser non supporta il video tag.
</video>
