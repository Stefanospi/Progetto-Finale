@model E_commerce.Models.Auth.Users

@{
    ViewData["Title"] = "Registrazione";

    // Definisci la lista di opzioni per il genere
    var genderOptions = new List<string> { "Maschio", "Femmina","Altro" };
}

<div class="container-fluid video-bg">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient bg-black">
                    <h3 class="card-title text-center personal-title text-light">Registrati</h3>
                </div>
                <div class="card-body mt-4">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="control-label playpen-sans">Nome</label>
                            <input asp-for="FirstName" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="control-label playpen-sans">Cognome</label>
                            <input asp-for="LastName" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label playpen-sans"></label>
                            <input asp-for="Email" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Username" class="control-label playpen-sans"></label>
                            <input asp-for="Username" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PasswordHash" class="control-label playpen-sans">Password</label>
                            <input asp-for="PasswordHash" type="password" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BirthDate" class="control-label playpen-sans">Data di nascita</label>
                            <input asp-for="BirthDate" type="date" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Gender" class="control-label playpen-sans">Genere:</label>
                            <select asp-for="Gender" class="form-control input-personal playpen-sans">
                                <option disabled selected>Seleziona genere</option>
                                @foreach (var gender in genderOptions)
                                {
                                    <option value="@gender">@gender</option>
                                }
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="control-label playpen-sans">Numero di telefono</label>
                            <input asp-for="PhoneNumber" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="button-56 playpen-sans">Registrati</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-controller="Auth" asp-action="Login" class="playpen-sans">Hai già un account? Accedi qui</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Video di sfondo -->
<video autoplay muted loop id="backgroundVideo">
    <source src="~/videos/STREETWEAR AD (720p, h264, youtube).mp4" type="video/mp4">
    Il tuo browser non supporta il video tag.
</video>
