@using E_commerce.Models.AllProduct;
@{
    ViewData["Title"] = "Aggiungi Prodotto";
    var categories = ViewBag.Categories as List<Categories>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_commerce.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E_commerce</a>

                <!-- Bottone per il menu mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links centrali (Desktop & Mobile) -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- Dropdown categorie -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdownCategories" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categorie
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownCategories">
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var category in ViewBag.Categories)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Home" asp-action="FilterByCategory" asp-route-categoryId="@category.CategoryId">
                                                @category.CategoryName
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Icona di ricerca -->
                <a class="nav-link text-dark" href="javascript:void(0)" id="searchIcon">
                    <i class="bi bi-search"></i>
                </a>

                <!-- Campo di input per la ricerca, inizialmente nascosto -->
                <input type="text" id="searchInput" class="form-control me-2" placeholder="Cerca prodotto" style="display:none;" />
                <!-- Icone a destra (Desktop & Mobile) -->
                <div class="d-flex align-items-center">
                    @if (User.IsInRole("admin"))
                    {
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Create">
                            <i class="bi bi-plus"></i>
                        </a>
                    }
                    <a class="nav-link text-dark position-relative" asp-area="" asp-controller="Cart" asp-action="CartProduct">
                        <i class="bi bi-cart"></i>
                            @await Html.PartialAsync("_CartItemCountPartial", (int?)ViewBag.CartItemCount ?? 0)
                    </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="EditProfile">Edit</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - E_commerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
