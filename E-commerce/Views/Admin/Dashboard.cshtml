@{
    ViewData["Title"] = "Dashboard Amministrativa";
}
<link href="~/css/dashboard.css" rel="stylesheet" />

<div class="container-fluid">

    <!-- Sezione Ordini -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h4 class="text-center playpen-sans mb-2">Ordini Effettuati</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr class="text-center">
                            <th>ID Ordine</th>
                            <th>Data</th>
                            <th>Importo Totale</th>
                            <th>Stato</th>
                            <th>Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in ViewBag.Orders)
                        {
                            <tr class="text-center align-middle">
                                <td>@order.OrderId</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                <td>@order.TotalAmount.ToString("C")</td>
                                <td>@order.Status</td>
                                <td>
                                    <a href="@Url.Action("OrderDetails", "Order", new { orderId = order.OrderId })" class="btn btn-secondary btn-sm">Dettagli</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Sezione Prodotti -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h4 class="text-center playpen-sans mb-2">Prodotti Caricati</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr class="text-center">
                            <th>ID Prodotto</th>
                            <th>Nome</th>
                            <th>Prezzo</th>
                            <th>Quantità</th>
                            <th>Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in ViewBag.Products)
                        {
                            <tr class="text-center align-middle">
                                <td>@product.ProductId</td>
                                <td>@product.Name</td>
                                <td>@product.Price.ToString("C")</td>
                                <td>@product.StockQuantity</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-secondary btn-sm">Modifica</a>
                                    <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger btn-sm">Elimina</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Sezione Utenti -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h4 class="text-center playpen-sans mb-2">Utenti Registrati</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr class="text-center">
                            <th>ID Utente</th>
                            <th>Nome Utente</th>
                            <th>Email</th>
                            <th>Ruolo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in ViewBag.Users)
                        {
                            <tr class="text-center align-middle">
                                <td>@user.IdUser</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.Roles</td> <!-- Visualizza i ruoli dell'utente -->
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
