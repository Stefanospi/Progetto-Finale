@using E_commerce.Models.AllProduct;
@model E_commerce.Models.AllProduct.Products

@{
    ViewData["Title"] = "Aggiungi Prodotto";
    var categories = ViewBag.Categories as List<Categories>;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StockQuantity" class="control-label"></label>
        <input asp-for="StockQuantity" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Image">Immagine del prodotto</label>
        <input type="file" class="form-control" name="Image" id="Image" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Inserisci la categoria prodotto:</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="" selected disabled>Seleziona la categoria</option>
            @foreach (var ct in categories)
            {
                <option value="@ct.CategoryId">@ct.CategoryName</option>
                
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Sizes" class="control-label">Taglie disponibili (separate da virgole):</label>
        <input type="text" name="Sizes" class="form-control" placeholder="Esempio: S,M,L,XL" />
        <span asp-validation-for="Sizes" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Aggiungi Prodotto</button>
</form>

<div>
    <a asp-controller="Home" asp-action="Index">Torna alla lista dei prodotti</a>
</div>
