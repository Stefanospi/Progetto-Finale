@using E_commerce.Models.AllProduct
@model E_commerce.Models.AllProduct.Products

@{
    ViewData["Title"] = "Aggiungi Prodotto";
    var categories = ViewBag.Categories as List<Categories>;
}

<div class="container-fluid">
    @Html.AntiForgeryToken()
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient bg-black">
                    <h3 class="card-title text-center personal-title text-light">Aggiungi Prodotto</h3>
                </div>
                <div class="card-body mt-4">
                    <!-- Aggiungi un summary della validazione -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form asp-action="Create" method="post" enctype="multipart/form-data">

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label playpen-sans">Nome del prodotto</label>
                            <input asp-for="Name" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label playpen-sans">Descrizione</label>
                            <textarea asp-for="Description" class="form-control input-personal playpen-sans"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price" class="control-label playpen-sans">Prezzo</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="StockQuantity" class="control-label playpen-sans">Quantità in stock</label>
                            <input asp-for="StockQuantity" type="number" step="1" class="form-control input-personal playpen-sans" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Image" class="control-label playpen-sans">Immagine del prodotto</label>
                            <input type="file" class="form-control input-personal playpen-sans" name="Image" id="Image" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CategoryId" class="control-label playpen-sans">Categoria prodotto</label>
                            <select asp-for="CategoryId" class="form-control input-personal playpen-sans">
                                <option value="" selected disabled>Seleziona la categoria</option>
                                @foreach (var ct in categories)
                                {
                                    <option value="@ct.CategoryId">@ct.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Sizes" class="control-label playpen-sans">Taglie disponibili (separate da virgole)</label>
                            <input type="text" asp-for="Sizes" class="form-control input-personal playpen-sans" placeholder="Esempio: S,M,L,XL" />
                            <span asp-validation-for="Sizes" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="TechnicalDetails" class="control-label playpen-sans">Aggiungi dettagli del prodotto</label>
                            <input type="text" asp-for="TechnicalDetails" class="form-control input-personal playpen-sans" placeholder="Esempio:Materiale utilizzato e dettagli tecnici" />
                            <span asp-validation-for="TechnicalDetails" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="button-56 playpen-sans">Aggiungi Prodotto</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-controller="Home" asp-action="Index" class="playpen-sans">Torna alla lista dei prodotti</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
