@model E_commerce.Models.AllProduct.Products

<div class="container">
    <div class="product-details">
        <div class="row">
            <div class="col-md-6">
                <!-- Visualizza l'immagine del prodotto -->
                @if (Model.Image != null && Model.Image.Length > 0)
                {
                    <img class="img-fluid" src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="@Model.Name" />
                }
                else
                {
                    <p>Nessuna immagine disponibile</p>
                }
            </div>
            <div class="col-md-6">
                <!-- Visualizza le informazioni del prodotto -->
                <h3 class="playpen-sans">@Model.Name</h3>
                <p class="playpen-sans">@Model.Description</p>
                <p><strong>Prezzo:</strong> @Model.Price.ToString("C")</p>
                @if (User.IsInRole("admin"))
                {
                    <p><strong>Quantità disponibile:</strong> @Model.StockQuantity</p>
                }
                <p><strong>Categoria:</strong> @Model.Category.CategoryName</p>

                <!-- Selezione taglie con bottoni -->
                <form asp-action="AddToCart" asp-controller="Cart" method="post">
                    <div class="form-group">
                        <label class="playpen-sans mb-2"for="size">Seleziona la taglia:</label>
                        <div class="size-selector d-flex flex-wrap">
                            @foreach (var size in Model.Sizes.Split(','))
                            {
                                <div class="size-option">
                                    <input type="radio" name="size" id="size_@size" value="@size.Trim()" required />
                                    <label for="size_@size" class="btn btn-outline-secondary">
                                        @size.Trim()
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- Campo input per la quantità -->
                    <div class="form-group mt-3">
                        <label for="quantity" class="playpen-sans mb-2">Quantità:</label>
                        <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" max="@Model.StockQuantity" required />
                    </div>

                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="button-55 mt-2 playpen-sans">Aggiungi al carrello</button>
                </form>

                @if (User.IsInRole("admin"))
                {
                    <a href="@Url.Action("Edit", "Product", new { id = Model.ProductId })" class="btn btn-secondary mt-3">Modifica</a>
                    <form asp-action="Delete" asp-controller="Product" method="post" onsubmit="return confirm('Sei sicuro di voler eliminare questo prodotto?')" style="display:inline-block;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@Model.ProductId" name="id" />
                        <button type="submit" class="btn btn-danger mt-3">Elimina</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
